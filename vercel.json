{
  "version": 2,
  "buildCommand": "apt-get update && apt-get install -y ghostscript && npm install",
  "build": {
    "env": {
      "GHOSTSCRIPT_PATH": "/opt/vercel/ghostscript/bin/gs"
    }
  },
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/compress",
      "dest": "server/server.js"
    },
    {
      "src": "/download/(.*)",
      "dest": "server/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "server/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 